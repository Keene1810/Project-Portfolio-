@model IEnumerable<test_ngo.Models.Volunteer>

@{
    ViewData["Title"] = "Index";
   
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <!-- Include Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <!-- Include Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet">

    <style>

        .navbar {
            min-height: 60px;
            max-height: 75px; /* Ensure a minimum height for the navbar */
        }


        body {
            font-family: 'Roboto', sans-serif;
            margin: 0;
            padding: 0;
            background-color: white;
        }

        .custom-btn-spacing {
            margin-right: 10px; /* Adjust the value as needed */
        }

        .centered-table-container {
            display: flex;
            justify-content: center;
        }

        .centered-table {
            width: 100%;
            max-width: 80%; /* Adjust the value as needed */
        }

        
            

        .btns {
            display: flex;
            position: absolute;
            margin-left: 60em;
            gap: 1em;
        }

        .volunteer-btn {
            font-family: 'Poppins', 'sans-serif';
            color: white;
            background-color: #90EE90;
            font-size: 16px;
            cursor: pointer;
            border-radius: 5px;
            transition-duration: 0.4s;
            border: none;
            padding: 5px 15px;
            text-align: center;
            margin-left: 1em;
        }

            .volunteer-btn:hover {
            }

        .donate-btn {
            font-family: 'Poppins', 'sans-serif';
            color: white;
            background-color: #ff6961;
            font-size: 16px;
            cursor: pointer;
            border-radius: 5px;
            border: none;
            padding: 5px 15px;
            text-align: center;
        }

            .donate-btn:hover {
                filter: brightness(85%); /* Reduces brightness to 80%, making the button darker */
                transition: filter 0.3s ease; /* Smooth transition for the brightness change*/
            }

      

    </style>
</head>
<body>



    <div class="container mt-5" style="padding-top:60px;">
        <h1 class="display-4 mb-4 text-center">Manage Volunteers</h1>

        <div class="centered-table-container">
            <table class="table table-striped table-bordered centered-table">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">@Html.DisplayNameFor(model => model.UserID)</th>
                        <th scope="col">@Html.DisplayNameFor(model => model.EventID)</th>
                        <th scope="col">@Html.DisplayNameFor(model => model.VolunteerName)</th>
                        <th scope="col">@Html.DisplayNameFor(model => model.VolunteerSurname)</th>
                        <th scope="col">@Html.DisplayNameFor(model => model.VolunteerEmail)</th>
                        <th scope="col">@Html.DisplayNameFor(model => model.PhoneNumber)</th>
                        <th scope="col">@Html.DisplayNameFor(model => model.Feedback)</th>
                        <th scope="col">@Html.DisplayNameFor(model => model.Status)</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.UserID)</td>
                            <td>@Html.DisplayFor(modelItem => item.EventID)</td>
                            <td>@Html.DisplayFor(modelItem => item.VolunteerName)</td>
                            <td>@Html.DisplayFor(modelItem => item.VolunteerSurname)</td>
                            <td>@Html.DisplayFor(modelItem => item.VolunteerEmail)</td>
                            <td>@Html.DisplayFor(modelItem => item.PhoneNumber)</td>
                            <td>@Html.DisplayFor(modelItem => item.Feedback)</td>
                            <td>@Html.DisplayFor(modelItem => item.Status)</td>
                            <td>
                                <div class="d-flex justify-content-end">
                                    <a asp-action="Edit" asp-route-id="@item.VolunteerID" class="btn btn-primary custom-btn-spacing">Edit</a>
                                    <a asp-action="Details" asp-route-id="@item.VolunteerID" class="btn btn-info custom-btn-spacing">Details</a>
                                    <a asp-action="Delete" asp-route-id="@item.VolunteerID" class="btn btn-danger">Delete</a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>


    <!-- Include Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>
   

</body>
</html>





@model IEnumerable<test_ngo.Models.Volunteer>

@{
    ViewData["Title"] = "Volunteer Applications";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <!-- Include Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <!-- Include Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">
 
    <style>
        body {
            font-family: 'Roboto', sans-serif;
        }

        .custom-btn-spacing {
            margin-right: 5px; /* Adjust the value as needed */
        }

        .action-buttons {
            display: flex;
            gap: 10px;
        }

        /* Override Bootstrap's default button margin/padding */
        .btn {
            margin-bottom: 0 !important; /* Remove bottom margin */
            padding-left: 10px !important; /* Adjust padding as needed */
            padding-right: 10px !important; /* Adjust padding as needed */
        }

        /* Set a specific width for the action column */
        .action-column {
            width: 200px; /* Adjust the value as needed */
            white-space: nowrap; /* Prevent wrapping */
        }

    </style>
</head>
<body>

    <div class="container mt-5" style="padding-top:60px;">
        <h1 class="display-4 mb-4 text-center">Volunteer Applications</h1>

        <table class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>Volunteer Name</th>
                    <th>Email</th>
                    <th>Phone Number</th>
                    <th>Status</th>
                    <th class="action-column">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var volunteer in Model)
                {
                    <tr>
                        <td>@volunteer.VolunteerName @volunteer.VolunteerSurname</td>
                        <td>@volunteer.VolunteerEmail</td>
                        <td>@volunteer.PhoneNumber</td>
                        <td>@volunteer.Status</td>
                        <td class="action-column">
                            <div class="action-buttons">
                                <form asp-action="Approve" asp-route-id="@volunteer.VolunteerID" method="post">
                                    <button type="submit" class="btn btn-primary custom-btn-spacing">Approve</button>
                                </form>
                                <form asp-action="Decline" asp-route-id="@volunteer.VolunteerID" method="post">
                                    <button type="submit" class="btn btn-danger">Decline</button>
                                </form>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Footer -->
    <footer class="footer mt-auto py-3 bg-light">
        <div class="container text-center">
            <span class="text-muted">&copy; 2024 NGO Volunteer Management System.</span>
        </div>
    </footer>

    <!-- Include Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>
</body>
</html>

@model test_ngo.Models.Volunteer

@{
    ViewData["Title"] = "Delete";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <!-- Include Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <!-- Include Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Roboto', sans-serif;
            padding-top: 60px; /* Added padding to avoid cutting off content by fixed navbar */
        }

        .container {
            margin-top: 20px; /* Adjusting top margin to space out the card */
        }

        .card {
            border-radius: 8px; /* Optional: adding rounded corners to the card */
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Optional: subtle shadow for depth */
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="card">
            <div class="card-body">
                <h3 class="text-center text-danger mb-4">Are you sure you want to delete this?</h3>
                <h4 class="card-title">Volunteer Information</h4>
                <hr />
                <dl class="row">
                    <dt class="col-sm-3">
                        @Html.DisplayNameFor(model => model.UserID)
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.UserID)
                    </dd>

                    <dt class="col-sm-3">
                        @Html.DisplayNameFor(model => model.EventID)
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.EventID)
                    </dd>

                    <dt class="col-sm-3">
                        @Html.DisplayNameFor(model => model.VolunteerName)
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.VolunteerName)
                    </dd>

                    <dt class="col-sm-3">
                        @Html.DisplayNameFor(model => model.VolunteerSurname)
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.VolunteerSurname)
                    </dd>

                    <dt class="col-sm-3">
                        @Html.DisplayNameFor(model => model.VolunteerEmail)
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.VolunteerEmail)
                    </dd>

                    <dt class="col-sm-3">
                        @Html.DisplayNameFor(model => model.PhoneNumber)
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.PhoneNumber)
                    </dd>

                    <dt class="col-sm-3">
                        @Html.DisplayNameFor(model => model.Feedback)
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.Feedback)
                    </dd>

                    <dt class="col-sm-3">
                        @Html.DisplayNameFor(model => model.Status)
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.Status)
                    </dd>
                </dl>
                <div class="mt-4">
                    <form asp-action="Delete" class="d-inline">
                        <input type="hidden" asp-for="VolunteerID" />
                        <input type="submit" value="Delete" class="btn btn-danger" />
                    </form>
                </div>
            </div>
        </div>
        <div class="mt-3">
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </div>

    <!-- Include Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>
</body>
</html>

@inject IHttpContextAccessor HttpContextAccessor

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - test_ngo</title>

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/test_ngo.styles.css" asp-append-version="true" />
   <!--Font awesome link-->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css" integrity="sha512-Kc323vGBEqzTmouAECnVceyQqyqdsSiqLQISBL29aUW4U/M7pSPA/gEUZQqv1cwx4OnYxTxve5UMg5GT6L4JJg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <!--Google font for Footer-->
    <link href="https://fonts.googleapis.com/css?family=Poppins:200;300,400,500,600,700,800,900&display=swap" rel="stylesheet">
    <!-- Include Font Awesome for icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <!-- Include Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Roboto', sans-serif;
        }

        /* Custom styling for ILK Foundation navbar */
        .navbar-custom {
            background-color: #343a40; 
        }

            .navbar-custom .navbar-brand,
            .navbar-custom .nav-link {
                color: #fff; /* White text for readability */
                white-space: nowrap; /* Prevent text from wrapping */
                background-color: #343a40;
                padding-top: 1rem; /* Increase top padding */
                padding-bottom: 1rem; /* Increase bottom padding */
                min-height: 60px;
                max-height:60px;
            }


            .navbar-custom .navbar-brand {
                font-weight: bold;
                font-size: 1.25rem; /* Adjust logo font size as needed */
            }

        .navbar-nav .nav-item {
            margin-left: 1rem;
        }

        .navbar-nav .nav-link:hover {
            color: #d4d4d4;
        }

        .nav-item .dropdown-menu {
            background-color: #343a40; /* Match navbar background */
            border: none;
        }

        .dropdown-menu .dropdown-item {
            color: #fff;
        }

            .dropdown-menu .dropdown-item:hover {
                background-color: #495057;
            }



        
        .container-f {
            display:flex;
            padding-top:2em;
            padding-bottom: 2em; 
            background-color:aliceblue;
            align-items:baseline;
            justify-content:space-around;         
        }

        /* Footer CSS code */
         .container-f h2{
             margin-bottom:20px;
             font-size:25px;
         }  

        .sml {
            list-style-type:none;
            padding:0;
            display:flex;
            gap:2em;
            align-items:baseline;
            margin-top:20px;
        }
     
        .about-us{
            margin-right:10em;
        }

        .cwt{
            text-align:center;
            padding-top:20px;
            border-top:2px solid white;
            background-color:aliceblue;
            height:4em;
            
        }

        .sup-quicklinks{
            display:flex;
            flex-direction:column;
            justify-content:center;
            position:absolute;
        }

        .sup-quicklinks ul, .sup-quicklinks a {
            display:flex;
            flex-direction:column;
            list-style-type: none;
            padding: 0;
            color:black;         
        }

        .cont-quicklinks ul, .cont-quicklinks a {
            list-style-type:none;
            padding:0;
            color:black;
        }

        .phone, .email, .address{
            display:flex;
            flex-direction:row;
            gap:1em;
        }

    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark navbar-custom fixed-top" id="mainNav">
        <div class="container-fluid d-flex justify-content-between">
            <!-- Logo with the foundation name -->
            <a class="navbar-brand js-scroll-trigger" href="#page-top">
                <span class="logo">ILK FOUNDATION</span>
            </a>

            <!-- Toggler for mobile view -->
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <!-- Navbar links -->
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav mr-auto">

                    <!-- More dropdown menu
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="moreDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            More
                        </a>
                        <div class="dropdown-menu" aria-labelledby="moreDropdown">
                            <a class="dropdown-item js-scroll-trigger" href="@Url.Action("Index", "Home")#home">Home</a>
                            <a class="dropdown-item js-scroll-trigger" href="@Url.Action("Index", "Home")#helpus">Help Us</a>
                            <a class="dropdown-item js-scroll-trigger" href="@Url.Action("Index", "Home")#project">Past Events</a>
                            <a class="dropdown-item js-scroll-trigger" href="@Url.Action("Index", "Home")#about">About Us</a>
                            <a class="dropdown-item js-scroll-trigger" href="@Url.Action("Index", "Home")#events">Upcoming Events</a>
                        </div>
                        -->
                    <li class="nav-item">
                        <a class="nav-link js-scroll-trigger" href="@Url.Action("Index", "Home")#home">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link js-scroll-trigger" href="@Url.Action("Index", "Home")#helpus">Help Us</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link js-scroll-trigger" href="@Url.Action("Index", "Home")#project">Past Events</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link js-scroll-trigger" href="@Url.Action("Index", "Home")#about">About</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link js-scroll-trigger" href="@Url.Action("Index", "Home")#events">Upcoming Events</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link js-scroll-trigger" href="@Url.Action("Volunteer", "Volunteers")">Volunteer</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Donates" asp-action="Donate">Donate</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link js-scroll-trigger" href="@Url.Action("Index", "Home")#testimonials">Testimonials</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link js-scroll-trigger" href="@Url.Action("Index", "Home")#contact">Contact</a>
                    </li>
                    <!-- Admin dropdown menu for authenticated users -->
                    @if (HttpContextAccessor.HttpContext.Session.GetString("currentUser") == "admin@example.com")
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="adminDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Admin
                            </a>
                            <div class="dropdown-menu" aria-labelledby="adminDropdown">
                                <a class="dropdown-item" asp-area="" asp-controller="Volunteers" asp-action="VolunteerApplications">Volunteer Applications</a>
                                <a class="dropdown-item" asp-area="" asp-controller="Volunteers" asp-action="Index">Manage Volunteers</a>
                                <a class="dropdown-item" asp-area="" asp-controller="PastEvents" asp-action="Index">Manage Past Events</a>
                                <a class="dropdown-item" asp-area="" asp-controller="Testimonials" asp-action="Index">Manage Testimonials</a>
                                <a class="dropdown-item" asp-area="" asp-controller="Events" asp-action="Index">Manage Upcoming Events</a>
                            </div>
                        </li>
                    }
                    <!-- Login partial for authenticated state -->
                    <li class="nav-item">
                        <partial name="_LoginPartial" />
                    </li>
                </ul>
            </div>
        </div>
    </nav>


    <!-- End of navbar code -->

    <div class="container mt-5">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!--Footer code-->
    <footer>
        <div class="container-f">
            <div class="about-us">
                <h2>About Us</h2>              
                <p>
                    We aim to increase income opportunities,<br /> improve children's nutrition, and help<br /> vulnerable communities become<br />
                    self-sufficient and productive. We strive to<br /> break the cycle of poverty caused by low<br /> literacy and lack of
                    opportunities,<br /> thereby enhancing the lives of children,<br /> families, and communities.
                </p>
                <ul class="sml">
                    <li><a href="https://web.facebook.com/ILKFoundation" target="_blank" rel="noopener noreferrer"><i class="fa-brands fa-facebook-f fa-2x"></i></a></li>
                    <li><a href="https://www.instagram.com/ilk_foundation/" target=" _blank" rel="noopener noreferrer" style="color:#e1306c"><i class="fa-brands fa-instagram fa-2x"></i></a></li>
                    <li><a href="#" style="color:#004182;"><i class="fa-brands fa-linkedin-in fa-2x"></i></a></li>
                    <li><a href="#" style="color:black;"><i class="fa-brands fa-square-x-twitter fa-2x"></i></a></li>
                </ul>
            </div>
            <div class="sup-quicklinks">
                <h2>Support</h2>
                <ul>
                    <li><a href="#">FAQ</a></li>
                    <li><a href="#">Privacy Policy</a></li>
                    <li><a href="#">Help</a></li>
                    <li><a href="#">Contact Us</a></li>
                </ul>
            </div>
            <div class="cont-quicklinks">
                <h2>Contact Us</h2>
                <div class="phone">
                    
                    <span><i class="fa-solid fa-phone"></i></span>
                    <p><a href="tel:0123456789">012 345 6789</a></p>
                    
                </div>
                <div class="email">
                    
                        <span><i class="fa-solid fa-envelope"></i></span>
                        <p><a href="mailto:diegobandle1@gmail.com">ilkfoundation@gmail.com</a></p>
                    
                </div>
                <div class="address">
                    <span><i class="fa-solid fa-location-dot"></i></span>
                    <p>56 Mfuphi Three Way, Ridgeview, Durban</p>
                </div>
                
            </div>
        </div>
    </footer>
    <div class="cwt">
        <p>&copy; Copyright 2024 <strong>ILK Foundation</strong>. All Rights Reserved</p>
    </div>

    <!-- Include jQuery and Bootstrap JS -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

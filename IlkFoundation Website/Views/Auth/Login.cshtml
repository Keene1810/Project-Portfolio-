@model test_ngo.Models.LoginModel

@{
    ViewData["Title"] = "Log in";
}
<link href="~/css/login.css" rel="stylesheet" />

<div class="container">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="card my-5">
                <form class="card-body cardbody-color p-lg-5" method="post">

                    <!-- Logo -->
                    <div class="text-center">
                        <img src="~/css/images/logo_ilk.jpg" class="img-fluid profile-image-pic img-thumbnail rounded-circle my-3" width="200px" alt="profile">
                    </div>

                    <!-- Email Input -->
                    <div class="form-floating mb-3">
                        <input asp-for="Email" class="form-control" id="Email" placeholder="name@example.com" aria-describedby="emailHelp" autocomplete="username" />
                        <label for="Email" class="form-label">Email</label>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <!-- Password Input -->
                    <div class="form-floating mb-3">
                        <input asp-for="Password" class="form-control" id="password" placeholder="password" autocomplete="current-password" />
                        <label for="Password" class="form-label">Password</label>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <!-- Submit Button -->
                    <div class="text-center">
                        <button type="submit" id="login-submit" class="btn btn-color px-5 mb-5 w-100">Login</button>
                    </div>

                    <!-- Links for Forgot Password, Register, etc. -->
                    <div id="emailHelp" class="form-text text-center mb-5 text-dark">
                        Not Registered? <a href="@Url.Action("Register", "Auth")" class="text-dark fw-bold">Create an Account</a>
                    </div>

                    <div class="text-center">
                        <a id="forgot-password" href="@Url.Action("ForgotPassword", "Auth")">Forgot your password?</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

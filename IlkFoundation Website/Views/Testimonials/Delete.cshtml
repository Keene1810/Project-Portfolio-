@model test_ngo.Models.Testimonials

@{
    ViewData["Title"] = "Delete";
}
<link href="~/css/cardviewspacing.css" rel="stylesheet" />


<h1 class="text-center mt-5">Delete Testimonial</h1>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0 rounded-lg">
                <div class="card-header bg-danger text-white text-center">
                    <h3>Are you sure you want to delete this testimonial?</h3>
                </div>
                <div class="card-body">
                    <h4 class="text-center">Testimonial Details</h4>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-2 font-weight-bold">
                            @Html.DisplayNameFor(model => model.Author)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Author)
                        </dd>
                        <dt class="col-sm-2 font-weight-bold">
                            @Html.DisplayNameFor(model => model.Description)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Description)
                        </dd>
                        <dt class="col-sm-2 font-weight-bold">
                            @Html.DisplayNameFor(model => model.Date)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Date)
                        </dd>
                        <dt class="col-sm-2 font-weight-bold">
                            @Html.DisplayNameFor(model => model.Position)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Position)
                        </dd>
                        <dt class="col-sm-2 font-weight-bold">
                            Image
                        </dt>
                        <dd class="col-sm-10">
                            @if (Model.ImageData != null && Model.ImageData.Length > 0)
                            {
                                string imageBase64 = Convert.ToBase64String(Model.ImageData);
                                string imageSrc = $"data:image;base64,{imageBase64}";
                                <img src="@imageSrc" alt="Testimonial Image" class="img-thumbnail" width="200" height="300" />
                            }
                            else
                            {
                                <span>No Image Available</span>
                            }
                        </dd>
                    </dl>
                </div>
                <div class="card-footer text-center">
                    <form asp-action="Delete" class="d-inline">
                        <input type="hidden" asp-for="TestimonialID" />
                        <input type="submit" value="Delete" class="btn btn-danger btn-lg" />
                    </form>
                    <a asp-action="Index" class="btn btn-secondary btn-lg ml-2">Back to List</a>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

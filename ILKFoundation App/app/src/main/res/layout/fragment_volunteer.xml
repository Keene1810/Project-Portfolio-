<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".VolunteerFragment"
    android:id="@+id/navigation_volunteer">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">

        <!-- Linear Layout containing all the elements with the ScrollView -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- Brown background -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@color/old_copper">

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Volunteer to Make a Positive Impact!"
                    android:textColor="@color/white"
                    android:textSize="21dp"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:paddingStart="28dp" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="178dp"
                android:src="@drawable/volunteer_four"
                android:contentDescription="Volunteer Background"
                android:layout_marginTop="53dp"/>

            <TextView
                android:id="@+id/tvWhyVol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Why Volunteer With Us?"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="257dp"/>

            <TextView
                android:id="@+id/textView11"
                android:layout_width="380dp"
                android:layout_height="wrap_content"
                android:text="At the ILK Foundation, we believe in the power of community and the impact that
passionate individuals can have on the world. We invite you to be part of our team of dedicated volunteers
who contribute their time, skills, and enthusiasm to make a difference."
                android:textColor="@color/black"
                android:textSize="18dp"
                android:lineSpacingExtra="2dp"
                android:layout_marginTop="310dp"
                android:layout_gravity="center_horizontal"/>

            <!--FrameLayout to act as a container -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.innovisiontechnology.ilkfoundation.CircularImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="480dp"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/volunteer_one"/>

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Meaningful Impact"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:textColor="@color/sushi"
                    android:layout_marginLeft="140dp"
                    android:layout_marginTop="480dp"/>

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Contribute to projects and \ninitiatives that have
a positive \nimpact on the community."
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:lineSpacingExtra="2dp"
                    android:layout_marginLeft="140dp"
                    android:layout_marginTop="515dp"/>
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="135dp">

                <com.innovisiontechnology.ilkfoundation.CircularImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="480dp"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/volunteer_two"/>

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Skill Development"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:textColor="@color/old_copper"
                    android:layout_marginLeft="140dp"
                    android:layout_marginTop="480dp"/>

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Enhance your skills and gain\nvaluable experience."
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:lineSpacingExtra="2dp"
                    android:layout_marginLeft="140dp"
                    android:layout_marginTop="515dp"/>
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="270dp">

                <com.innovisiontechnology.ilkfoundation.CircularImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="480dp"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/volunteer_three"/>

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Community Connection"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:textColor="@color/vivid_yellow"
                    android:layout_marginLeft="140dp"
                    android:layout_marginTop="480dp"/>

                <TextView
                    android:id="@+id/textView16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Join a community of like minded
individuals who are committed to
making a difference."
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:lineSpacingExtra="2dp"
                    android:layout_marginLeft="140dp"
                    android:layout_marginTop="515dp"/>
            </FrameLayout>

            <ImageView
                android:layout_width="190dp"
                android:layout_height="300dp"
                android:src="@drawable/cartoon_sun"
                android:layout_gravity="right"
                android:layout_marginTop="820dp"/>

            <!--Cardview for the volunteer button-->
            <androidx.cardview.widget.CardView
                android:layout_width="395dp"
                android:layout_height="340dp"
                app:cardCornerRadius="60dp"
                android:layout_marginTop="1050dp"
                android:layout_gravity="center_horizontal"
                android:backgroundTint="@color/Pastel_Green">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ready to Make a Difference?"
                    android:layout_gravity="center_horizontal"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="25dp"
                    android:layout_marginTop="30dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thank you for considering joining us on\n
this journey to create positive change. \n
Together, we can make a lasting impact\n
and build a better future for our\n
community."
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:lineSpacingExtra="2dp"
                    android:layout_marginTop="90dp"
                    android:layout_gravity="center_horizontal"/>

                <Button
                    android:id="@+id/btnVolunteer"
                    android:layout_width="250dp"
                    android:layout_height="70dp"
                    android:text="Volunteer"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/black"
                    android:layout_marginTop="250dp"
                    android:layout_gravity="center_horizontal"/>
            </androidx.cardview.widget.CardView>



            <!-- Container for the footer -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/white"
                android:layout_marginTop="1450dp">

            </FrameLayout>



        </FrameLayout>
    </ScrollView>


</FrameLayout>